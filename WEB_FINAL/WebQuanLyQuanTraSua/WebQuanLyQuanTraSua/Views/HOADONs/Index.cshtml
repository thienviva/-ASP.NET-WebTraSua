@model IEnumerable<WebQuanLyQuanTraSua.Models.HOADON>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Hóa Đơn</h2>

<p>
    <div class="btn btn-default">
        @Html.ActionLink("Thêm mới", "Create")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            Ngày xuất hóa đơn:
        </th>
        <th>
            Tổng giá:
        </th>
        <th>
            Tình trạng:
        </th>
        <th>
            Tên chi nhánh:
        </th>
        <th>
            Khách hàng (Đã có tài khoản):
        </th>
        <th>
            Khách hàng (Không sử dụng tài khoản):
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayXuatHD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TongGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTrangHD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHINHANH.TenCN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KHACHHANG.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KHACHHANGLA.HoTen)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaHD }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaHD }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHD })
        </td>
    </tr>
}

</table>
