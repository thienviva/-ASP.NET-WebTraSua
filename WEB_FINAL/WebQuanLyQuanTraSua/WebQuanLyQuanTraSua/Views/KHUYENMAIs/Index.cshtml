@model IEnumerable<WebQuanLyQuanTraSua.Models.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Khuyến Mãi Của Khách Hàng</h2>

<p>
    <div class="btn btn-default">
        @Html.ActionLink("Thêm mới", "Create")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            Tên khuyến mãi:
        </th>
        <th>
            Điều kiện cấp bậc:
        </th>
        <th>
            Ghi chú:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DieuKienCapBac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaKM }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKM }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaKM })
        </td>
    </tr>
}

</table>
